{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "no-unused-vars": "off"
    },
    "env": {
        "node": true,
        "es6": true
    },
    "ignorePatterns": ["out", "dist", "**/*.d.ts", "node_modules", ".vscode-test"]
}
