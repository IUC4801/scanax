{
  "name": "scanax",
  "displayName": "Scanax",
  "description": "Security scanning extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scanax",
          "title": "Scanax",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "scanax": [
        {
          "id": "scanax.securityDashboard",
          "name": "Security Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "scanax.runScan",
        "title": "Run Scan"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
