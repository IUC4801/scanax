{
  "name": "scanax",
  "displayName": "Scanax Security Scanner",
  "description": "Enterprise-grade security vulnerability scanner with AI-powered detection and automated remediation for 50+ vulnerability types across multiple languages",
  "version": "1.0.2",
  "publisher": "AyushiChaudhuri",
  "icon": "resources/encrypted.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/IUC4801/scanax"
  },
  "bugs": {
    "url": "https://github.com/IUC4801/scanax/issues"
  },
  "license": "MIT",
  "keywords": [
    "security",
    "vulnerability",
    "scanner",
    "code analysis",
    "AI",
    "SQL injection",
    "XSS",
    "OWASP",
    "CWE",
    "static analysis",
    "dependency scanner",
    "secret detection"
  ],
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/src/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:typescript"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scanax-sidebar",
          "title": "Scanax",
          "icon": "resources/scanax-icon.png"
        }
      ]
    },
    "views": {
      "scanax-sidebar": [
        {
          "type": "webview",
          "id": "scanax.welcomeView",
          "name": "Setup",
          "icon": "$(gear)",
          "when": "scanax.setupComplete == false"
        },
        {
          "type": "tree",
          "id": "scanax.securityDashboard",
          "name": "Security Dashboard",
          "icon": "$(shield)",
          "when": "scanax.setupComplete == true"
        }
      ]
    },
    "commands": [
      {
        "command": "scanax.openPanel",
        "title": "Open Vulnerability Panel",
        "icon": "$(window)",
        "category": "Scanax"
      },
      {
        "command": "scanax.scanNow",
        "title": "Scan Workspace Now",
        "icon": "$(play)",
        "category": "Scanax"
      },
      {
        "command": "scanax.runScan",
        "title": "Scanax: Run Security Scan",
        "category": "Scanax",
        "icon": "$(shield)"
      },
      {
        "command": "scanax.applyFix",
        "title": "Scanax: Apply AI Fix"
      },
      {
        "command": "scanax.workspaceScan",
        "title": "Scanax: Workspace-wide Security Scan",
        "category": "Scanax"
      },
      {
        "command": "scanax.fixVulnerability",
        "title": "Fix Vulnerability",
        "icon": "$(tools)"
      },
      {
        "command": "scanax.scanDependencies",
        "title": "Scanax: Scan Dependencies for Vulnerabilities",
        "category": "Scanax",
        "icon": "$(package)"
      },
      {
        "command": "scanax.showWelcome",
        "title": "Scanax: Show Welcome Page",
        "category": "Scanax",
        "icon": "$(home)"
      },
      {
        "command": "scanax.startTutorial",
        "title": "Scanax: Start Tutorial",
        "category": "Scanax",
        "icon": "$(mortar-board)"
      },
      {
        "command": "scanax.openSampleCode",
        "title": "Scanax: Open Sample Vulnerable Code",
        "category": "Scanax",
        "icon": "$(file-code)"
      },
      {
        "command": "scanax.reportFalsePositive",
        "title": "Scanax: Report False Positive",
        "category": "Scanax",
        "icon": "$(report)"
      },
      {
        "command": "scanax.createIgnoreFile",
        "title": "Scanax: Create .scanaxignore File",
        "category": "Scanax",
        "icon": "$(file-add)"
      },
      {
        "command": "scanax.clearCache",
        "title": "Scanax: Clear Scan Cache",
        "category": "Scanax",
        "icon": "$(clear-all)"
      },
      {
        "command": "scanax.checkBackendHealth",
        "title": "Scanax: Check Backend Health",
        "category": "Scanax",
        "icon": "$(pulse)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "scanax.runScan",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "scanax.scanNow",
          "when": "view == scanax.securityDashboard",
          "group": "navigation"
        },
        {
          "command": "scanax.openPanel",
          "when": "view == scanax.securityDashboard",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "scanax.fixVulnerability",
          "when": "view == scanax.securityDashboard && viewItem == vulnerability",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Scanax",
      "properties": {
        "scanax.provider": {
          "type": "string",
          "enum": [
            "Default (Free)",
            "Groq (Custom)"
          ],
          "default": "Default (Free)",
          "description": "Choose which LLM provider to use for security scanning"
        },
        "scanax.customApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Groq API key (leave empty to use Default provider)",
          "markdownDescription": "Your Groq API key for custom scanning. [Get a free key](https://console.groq.com/keys)",
          "editPresentation": "multilineText"
        },
        "scanax.showWelcome": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome page on first activation"
        },
        "scanax.backendUrl": {
          "type": "string",
          "default": "https://scanax-backend.onrender.com",
          "description": "Scanax backend API URL",
          "markdownDescription": "Backend server URL. Use `http://localhost:8000` for local or your deployed URL (e.g., `https://scanax-backend.onrender.com`)"
        }
      }
    },
    "keybindings": [
      {
        "command": "scanax.runScan",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "scanax.workspaceScan",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w"
      },
      {
        "command": "scanax.openPanel",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "echo 'Linting skipped - TypeScript compiler handles type checking'",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.42.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
